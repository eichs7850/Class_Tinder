<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="0dp"
    android:layout_height="fill_parent"
    android:layout_width="wrap_content">


    <LinearLayout
        android:id="@+id/calenderTitleLL"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_height="50dp"
            android:layout_width="match_parent"
            tools:ignore="Suspicious0dp"
            android:layout_weight="1"
            android:layout_marginLeft="20dp">

            <Button
                android:id="@+id/calendarBackButton"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:text="@string/back_btn"
                android:layout_marginTop="2dp"
                android:padding="0dp"/>

            <TextView
                android:id="@+id/calendarScheduleTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="false"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:text="@string/calendar_title"
                android:textColor="@color/purple_500"
                android:textSize="22dp"
                android:textStyle="bold" />

        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/calenderDaysLL"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_height="36dp"
            android:layout_width="0dp"
            tools:ignore="Suspicious0dp"
            android:layout_weight="1"
            android:layout_gravity="top">

            <TextView
                android:id="@+id/calendarMondayTV"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="false"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"
                android:gravity="left"
                android:text="@string/calendar_monday"
                android:textColor="@color/purple_500"
                android:textSize="13dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/calendarTuesdayTV"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="false"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="117dp"
                android:gravity="left"
                android:text="@string/calendar_tuesday"
                android:textColor="@color/purple_500"
                android:textSize="13dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/calendarWednesdayTV"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="false"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="35dp"
                android:gravity="center"
                android:text="@string/calendar_wednesday"
                android:textColor="@color/purple_500"
                android:textSize="13dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/calendarThursdayTV"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="false"
                android:layout_marginTop="10dp"
                android:layout_marginRight="80dp"
                android:gravity="right"
                android:text="@string/calendar_thursday"
                android:textColor="@color/purple_500"
                android:textSize="13dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/calendarFridayTV"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="false"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:gravity="right"
                android:text="@string/calendar_friday"
                android:textColor="@color/purple_500"
                android:textSize="13dp"
                android:textStyle="bold" />

        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="400dp"
        android:layout_height="3dp"
        android:background="@color/purple_500"
        android:outlineAmbientShadowColor="@color/purple_200"
        android:layout_marginTop="69dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="5dp"/>

    <ScrollView
        android:layout_marginTop="75dp"
        android:padding="0dp"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:layout_alignParentBottom="true"
        android:fadingEdge="none">

        <RelativeLayout
            android:padding="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:padding="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:padding="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    tools:ignore="Suspicious0dp">

                    <TextView
                        android:id="@+id/time7amTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="4dp"
                        android:paddingTop="0dp"
                        android:gravity="center"
                        android:text="@string/calendar_7am"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/time8amTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="60dp"
                        android:layout_marginRight="4dp"
                        android:gravity="center"
                        android:text="@string/calendar_8am"
                        android:paddingTop="0dp"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/time9amTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="120dp"
                        android:layout_marginRight="4dp"
                        android:gravity="center"
                        android:text="@string/calendar_9am"
                        android:padding="0dp"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/time10amTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="180dp"
                        android:layout_marginRight="4dp"
                        android:gravity="center"
                        android:text="@string/calendar_10am"
                        android:paddingTop="3dp"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/time11amTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="240dp"
                        android:layout_marginRight="4dp"
                        android:gravity="center"
                        android:text="@string/calendar_11am"
                        android:paddingTop="3dp"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/time12pmTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="300dp"
                        android:layout_marginRight="4dp"
                        android:gravity="center"
                        android:text="@string/calendar_12pm"
                        android:paddingTop="4dp"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/time1pmTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="360dp"
                        android:layout_marginRight="4dp"
                        android:gravity="center"
                        android:text="@string/calendar_1pm"
                        android:paddingTop="4dp"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/time2pmTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="420dp"
                        android:layout_marginRight="4dp"
                        android:gravity="center"
                        android:text="@string/calendar_2pm"
                        android:paddingTop="4dp"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/time3pmTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="480dp"
                        android:layout_marginRight="4dp"
                        android:gravity="center"
                        android:text="@string/calendar_3pm"
                        android:paddingTop="7dp"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/time4pmTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="540dp"
                        android:layout_marginRight="4dp"
                        android:gravity="center"
                        android:text="@string/calendar_4pm"
                        android:paddingTop="8dp"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/time5pmTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="600dp"
                        android:layout_marginRight="4dp"
                        android:gravity="center"
                        android:text="@string/calendar_5pm"
                        android:paddingTop="10dp"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/time6pmTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="660dp"
                        android:layout_marginRight="4dp"
                        android:gravity="center"
                        android:text="@string/calendar_6pm"
                        android:paddingTop="12dp"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/time7pmTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="720dp"
                        android:layout_marginRight="4dp"
                        android:gravity="center"
                        android:text="@string/calendar_7pm"
                        android:paddingTop="12dp"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/time8pmTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="780dp"
                        android:layout_marginRight="4dp"
                        android:gravity="center"
                        android:text="@string/calendar_8pm"
                        android:paddingTop="13dp"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/time9pmTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="840dp"
                        android:layout_marginRight="4dp"
                        android:gravity="center"
                        android:text="@string/calendar_9pm"
                        android:paddingTop="16dp"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/time10pmTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="900dp"
                        android:layout_marginRight="4dp"
                        android:gravity="center"
                        android:text="@string/calendar_10pm"
                        android:paddingTop="18dp"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/time11pmTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="960dp"
                        android:layout_marginRight="4dp"
                        android:gravity="center"
                        android:text="@string/calendar_11pm"
                        android:paddingTop="18dp"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/time12amTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="1020dp"
                        android:layout_marginRight="4dp"
                        android:gravity="center"
                        android:text="@string/calendar_12am"
                        android:paddingTop="20dp"
                        android:textSize="12dp" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/mondayGrid"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    tools:ignore="Suspicious0dp"
                    android:background="@drawable/calendar_border">

                <include layout="@layout/calendar_helper"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/tuesdayGrid"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    tools:ignore="Suspicious0dp"
                    android:background="@drawable/calendar_border">

                <include layout="@layout/calendar_helper"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/wednesdayGrid"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    tools:ignore="Suspicious0dp"
                    android:background="@drawable/calendar_border">

                <include layout="@layout/calendar_helper"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/thursdayGrid"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    tools:ignore="Suspicious0dp"
                    android:background="@drawable/calendar_border">

                <include layout="@layout/calendar_helper"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/fridayGrid"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    tools:ignore="Suspicious0dp"
                    android:background="@drawable/calendar_border">

                    <include layout="@layout/calendar_helper"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="0dp"
                android:baselineAligned="false"
                android:padding="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:id="@+id/calendarTimeLine"
                    android:layout_height="1dp"
                    android:layout_marginTop="0dp"
                    android:layout_width="20dp"
                    android:layout_weight="14"
                    android:background="@color/purple_200"/>


            </LinearLayout>

        </RelativeLayout>


    </ScrollView>
</RelativeLayout>